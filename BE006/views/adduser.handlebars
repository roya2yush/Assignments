{{#if error}} <span>{{error}}</span>{{/if}}

<h1 class="text-center py-5">ADD USERS</h1>
<form method="POST" class="py-5" action="/users/add">
    <div class="form-group py-5">
        <label>ID</label>
        <input type="text" name="id" placeholder="I D" class="form-control">
        <label>First Name</label>
        <input type="text" name="fname" placeholder="First Name" class="form-control">
        <label>Last Name</label>
        <input type="text" name="lname" placeholder="Last Name" class="form-control">
        <label>Email-id</label>
        <input type="email" name="email" placeholder="email id" class="form-control">
        <label>Phone no</label>
        <input type="tel" name="phone" placeholder="Phone no" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary" value="Save">
</form>